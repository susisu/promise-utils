{
  "name": "@susisu/promise-utils",
  "version": "0.1.2",
  "description": "Promise utilities",
  "repository": "https://github.com/susisu/promise-utils.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./lib/index.js",
        "types": "./lib/index.d.ts"
      },
      "require": {
        "default": "./lib/index.cjs",
        "types": "./lib/index.d.cts"
      }
    }
  },
  "files": [
    "lib",
    "src",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/**/__tests__"
  ],
  "scripts": {
    "format": "prettier --write src '*.js'",
    "format:check": "prettier --check src '*.js'",
    "lint": "eslint --fix src '*.js'",
    "lint:check": "eslint src '*.js'",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --coverage",
    "test:dev": "vitest dev --coverage.enabled --coverage.reporter=text",
    "build": "tsup",
    "prepublishOnly": "run-s format:check lint:check typecheck test build"
  },
  "devDependencies": {
    "@susisu/eslint-config": "^0.0.79",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vitest": "^0.3.22",
    "globals": "^14.0.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
