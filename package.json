{
  "name": "@susisu/promise-utils",
  "version": "0.1.2",
  "description": "Promise utilities",
  "repository": "https://github.com/susisu/promise-utils.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/**/__tests__"
  ],
  "scripts": {
    "format": "prettier --write src '*.js'",
    "format:check": "prettier --check src '*.js'",
    "lint": "eslint --fix src '*.js'",
    "lint:check": "eslint src '*.js'",
    "test": "jest",
    "build": "tsc --build tsconfig.build.json",
    "clean": "run-s clean:build clean:rm",
    "clean:build": "tsc --build tsconfig.build.json --clean",
    "clean:rm": "rimraf lib",
    "prepublishOnly": "run-s clean format:check lint:check test build"
  },
  "devDependencies": {
    "@susisu/eslint-config": "^0.0.79",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "jest": "^29.7.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
